<div class="container">
  <% if book.errors.any? %>
  <%= book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
</div>

<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-circle" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%=user.introduction %></th>
      </tr>
    </tbody>
  </table>
    <div class="social">
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <input class="form-control book_title" type="text" name="book[title]" id="book_title">
    </div>
    <div class="form-group">
      <lavel for="bool_opinion">Opinion</lavel>
      <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    </div>
  <% end %>

</div>
