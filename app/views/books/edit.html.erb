<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="form-body p-4">
        <h1>Editing Book</h1>

        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this book from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @book, local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <input class="form-control book_title" type="text" value="<%=@book.title%>" name="book[title]" id="book_title">
          </div>
          <div class="form-group">
            <lavel for="bool_opinion">Opinion</lavel>
            <textarea class="form-control book_body" name="book[body]" id="book_body"><%=@book.body%></textarea>
          </div>
          <div class="form-group">
            <%= f.submit 'Update Book', class:"btn btn-success" %>
          </div>
        <% end %>
          <p>
            <%= link_to "Show", book_path(@book) %>
          <span>|</span>
            <a class= "buttom" a href = "/books">Back</a>
          </p>
      </div>  
    </div>
  </div>
</div>

